<div id="tool-bar">
    <label>统计日期:</label>

    <a class="typea @(con.KeyWord=="sy"?"cur":"")" href="@Url.Action("GongChengJianShe","Stat",new{vn="GongChengJianShe",KeyWord="sy",con.Type})">上月</a>
    <a class="typea @(con.KeyWord=="by"?"cur":"")" href="@Url.Action("GongChengJianShe","Stat",new{vn="GongChengJianShe",KeyWord="by",con.Type})">本月</a>
    <a class="typea @(con.KeyWord=="sn"?"cur":"")" href="@Url.Action("GongChengJianShe","Stat",new{vn="GongChengJianShe",KeyWord="sn",con.Type})">上年</a>
    <a class="typea @(con.KeyWord=="bn"?"cur":"")" href="@Url.Action("GongChengJianShe","Stat",new{vn="GongChengJianShe",KeyWord="bn",con.Type})">本年</a>
    <form method="post" action="@Url.Action("GongChengJianShe","Stat",new{vn="GongChengJianShe",con.Type})">
        <label class="@(string.IsNullOrWhiteSpace(con.KeyWord)?"cur":"")">时间区间</label>
        <input type="date" name="BeginTime" />
        <input type="date" name="EndTime" />
        <input type="submit" value="查询" />
    </form>
    <a class="typea" href="@Url.Action("Export","Stat",con)" target="_blank">导出</a>
</div>
<div id="data" >
    @Html.Partial(string.Format("GongChengJianShe_{0}", con.Type), Model)
</div>
