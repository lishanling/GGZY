@{
    ViewBag.Title = "建设工程施工招标统计";
    Layout = "~/Views/Shared/_LayoutBody.cshtml";
    var m = DateTime.Now.Minute;
}
@section scripts{

    <script src="~/static/modules/Stat/GCJS.A08.js?v=@m"></script>
}
@section styles{

    <link href="~/static/modules/Stat/GCJS.css" rel="stylesheet" />
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">建设工程施工招标统计</h3>
    </div>
    <div class="panel-body">
        <div id="search-collapse" class="collapse" style="display: block">
            <div class="accordion-inner">
                <form id="searchForm" class="form form-horizontal well clearfix" action="" method="post">
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="label-item single-overflow pull-left" title="统计日期">统计日期</label>
                        <div class="col-xs-12">
                            <a class="btn btn-primary btn-rounded  btn-sm btn-kw" data-b="@(DateTime.Today.AddDays(1 - DateTime.Today.Day).AddMonths(-1).ToString("yyyy-MM-dd HH:mm:ss"))" data-e="@(DateTime.Today.AddDays(1 - DateTime.Today.Day).ToString("yyyy-MM-dd HH:mm:ss"))"> 上月</a>
                            <a class="btn btn-primary btn-rounded  btn-bordered btn-sm btn-kw" data-b="@(DateTime.Today.AddDays(1 - DateTime.Today.Day).ToString("yyyy-MM-dd HH:mm:ss"))" data-e="@(DateTime.Today.AddDays(1).ToString("yyyy-MM-dd HH:mm:ss"))"> 本月</a>
                            <a class="btn btn-primary btn-rounded  btn-bordered btn-sm btn-kw" data-b="@(DateTime.Today.AddDays(1 - DateTime.Today.DayOfYear).AddYears(-1).ToString("yyyy-MM-dd HH:mm:ss"))" data-e="@(DateTime.Today.AddDays(1 - DateTime.Today.DayOfYear).ToString("yyyy-MM-dd HH:mm:ss"))"> 上年</a>
                            <a class="btn btn-primary btn-rounded  btn-bordered btn-sm btn-kw" data-b="@(DateTime.Today.AddDays(1 - DateTime.Today.DayOfYear).ToString("yyyy-MM-dd HH:mm:ss"))" data-e="@(DateTime.Today.AddDays(1).ToString("yyyy-MM-dd HH:mm:ss"))"> 本年</a>
                            <input type="hidden" name="type" value="@(Request.QueryString["type"])" />
                        </div>


                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="label-item single-overflow pull-left" title="创建时间：">时间区间</label>
                        <div class="col-xs-12">
                            <div class="col-xs-12 col-sm-6">
                                <div class="input-group date" id="BeginTime" style="left: -10px;">
                                    <input type="text" name="BeginTime" class="form-control" value="@(DateTime.Today.AddDays(1 - DateTime.Today.Day).AddMonths(-1).ToString("yyyy-MM-dd HH:mm:ss"))">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="input-group date" id="EndTime" style="left: -10px;">
                                    <input type="text" name="EndTime" class="form-control" value="@(DateTime.Today.AddDays(1 - DateTime.Today.Day).ToString("yyyy-MM-dd HH:mm:ss"))">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div style="margin-top:26px">
                            <a id="search" class="btn btn-primary btn-rounded  btn-bordered btn-sm"><i class="fa fa-search"></i> 查询</a>
                            <a id="reset" class="btn btn-primary btn-rounded  btn-bordered btn-sm"><i class="fa fa-refresh"></i> 重置</a>
                            <a id="export" class="btn btn-primary btn-rounded  btn-bordered btn-sm" data-url="@(Url.Action("Export","Stat"))">
                                <i class="fa fa-file-excel-o"></i> 导出
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="toolbar" style="">
            <label class="btn ZBXMZS" >
                招标项目总数
                <br />
                <span id="zbxmCount">0</span>
            </label>
            <label class="btn ZBRSL" >
                招标人数量
                <br /> <span id="zbrCount">0</span>
            </label>
            <label class="btn ZBDLSL" >
                招标代理数量
                <br /> <span id="zbdlCount">0</span>
            </label>
            <label class="btn ZBKZJZE" >
                招标控制价总额
                <br />
                <span id="sumKzj">0</span>万元
            </label>
            <label class="btn ZBJZE">
                中标价总额
                <br />
                <span id="sumZbj">0</span>万元
            </label>
            @*<label class="btn PJXFL" >
                平均下浮率
                <br /> 5%
            </label>*@
            <label class="btn ZBDWZS" >
                中标单位总数
                <br /> <span id="zbdwCount">0</span>
            </label>
        </div>
        <table id="mainTable" data-toolbar="#toolbar"></table>

    </div>
</div>